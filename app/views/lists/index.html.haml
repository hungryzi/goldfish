%h1 Listing lists

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th

  %tbody
    - @lists.each do |list|
      %tr
        %td
          = link_to list.name, list_path(list)
        %td
          = link_to 'Edit', edit_list_path(list)
          = link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete
  %tfoot
    %tr
      %td{ colspan: 2 }
        = link_to 'New List', new_list_path
